        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppBodega"
        mc:Ignorable="d"
        Title="Solicitar Insumo" Height="450" Width="641" WindowStartupLocation="CenterScreen" Loaded="MetroWindow_Loaded">
    <Grid HorizontalAlignment="Left" Width="631">
        <Label x:Name="lblIngreso" Content="Solicitar Insumo" HorizontalAlignment="Left" Height="56" Margin="171,18,0,0" VerticalAlignment="Top" Width="270" FontSize="36"/>
