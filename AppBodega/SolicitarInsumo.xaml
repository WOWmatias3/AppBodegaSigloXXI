        <Label x:Name="lblCantidad" Content="Cantidad:" HorizontalAlignment="Left" Height="26" Margin="87,221,0,0" VerticalAlignment="Top" Width="62" RenderTransformOrigin="1.565,0.308"/>
        <TextBox x:Name="txtCantidad" HorizontalAlignment="Left" Height="26" Margin="228,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" RenderTransformOrigin="0.448,1.577" PreviewTextInput="txtCantidad_PreviewTextInput_1" GotFocus="txtCantidad_GotFocus" />
        <Button x:Name="btnAceptar" Content="Solicitar Insumo&#xD;&#xA;" HorizontalAlignment="Left" Height="39" Margin="171,288,0,0" VerticalAlignment="Top" Width="154" Click="btnAceptar_Click" RenderTransformOrigin="1.12,0.295" />
