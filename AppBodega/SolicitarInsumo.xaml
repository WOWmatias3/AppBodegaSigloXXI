        <Label x:Name="lblUser" Content="" HorizontalAlignment="Left" Height="28" Margin="10,18,0,0" VerticalAlignment="Top" Width="139"/>
        <TextBox x:Name="txtInsumos" HorizontalAlignment="Left" Height="27" Margin="228,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" PreviewTextInput="txtInsumos_PreviewTextInput_1" RenderTransformOrigin="0.497,0.074" GotFocus="txtInsumos_GotFocus"  />
        <RadioButton x:Name="rbtIngredientes" Content="Ingredientes" HorizontalAlignment="Left" Margin="113,93,0,0" VerticalAlignment="Top" Checked="rbtIngredientes_Checked"/>
        <RadioButton x:Name="rbtBebestibles" Content="Bebestibles" HorizontalAlignment="Left" Margin="286,93,0,0" VerticalAlignment="Top" Checked="rbtBebestibles_Checked"/>
        <Label x:Name="lblBebestible" Content="Nombre de insumo&#xD;&#xA;" HorizontalAlignment="Left" Margin="87,154,0,0" VerticalAlignment="Top" Height="27" Width="120" RenderTransformOrigin="-2.025,1.148" ScrollViewer.HorizontalScrollBarVisibility="Visible" Visibility="Hidden"/>
        <TextBox x:Name="txtBebestible" HorizontalAlignment="Left" Height="23" Margin="228,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" PreviewTextInput="txtBebestible_PreviewTextInput" VerticalScrollBarVisibility="Visible" Visibility="Hidden" GotFocus="txtBebestible_GotFocus"/>
        <Label x:Name="lblcantBebestible" Content="Cantidad:" HorizontalAlignment="Left" Margin="87,221,0,0" VerticalAlignment="Top" Width="102" Visibility="Hidden"/>
        <TextBox x:Name="txtcantBebestible" HorizontalAlignment="Left" Height="23" Margin="228,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" PreviewTextInput="txtcantBebestible_PreviewTextInput" GotFocus="txtcantBebestible_GotFocus"/>
        <Label x:Name="lblCompletar" Content="" HorizontalAlignment="Left" Margin="228,187,0,0" VerticalAlignment="Top" Width="161"/>
        <Label x:Name="lblCompletar2" Content="" HorizontalAlignment="Left" Margin="228,257,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.158,0.154" Width="161"/>
        <Label x:Name="lblCompletar3" Content="" HorizontalAlignment="Left" Height="23" Margin="189,116,0,0" VerticalAlignment="Top" Width="167" GotFocus="lblCompletar3_GotFocus"/>
    </Grid>
</mah:MetroWindow>
